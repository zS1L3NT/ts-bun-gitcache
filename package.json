{
	"name": "ts-github-notion-sync",
	"description": "Sync my notion board with my github repositories information",
	"main": "dist/app.js",
	"author": "zS1L3NT <zechariahtan144@gmail.com> (https://www.zectan.com)",
	"license": "GPL-3.0",
	"scripts": {
		"start": "node --loader ts-node/esm --watch --no-warnings src/app.mts",
		"dev": "ts-node --files src/app.ts",
		"build": "tsc",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"prettier": "prettier src --check",
		"prettier:fix": "prettier src --write",
		"clean": "tsc --noEmit && eslint src --fix && prettier src --write"
	},
	"dependencies": {
		"@notionhq/client": "^1.0.4",
		"@octokit/core": "^3.6.0",
		"@prisma/client": "^5.1.1",
		"after-every": "^1.0.4",
		"axios": "^0.27.2",
		"colors": "^1.4.0",
		"dotenv": "^16.3.1",
		"no-try": "^3.1.0",
		"prisma": "^5.1.1",
		"tracer": "^1.1.6"
	},
	"devDependencies": {
		"@types/node": "latest",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"eslint": "latest",
		"eslint-config-prettier": "latest",
		"eslint-plugin-simple-import-sort": "latest",
		"prettier": "latest",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
